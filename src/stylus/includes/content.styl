.Hero
	background-color gray_color_1
	text-align: left
	font-family: tipography
	h1, h2 
		margin: 0
	img.icon
		width 30px
		margin-bottom 20px
	h1
		font-style: normal
		font-weight: bold
		font-family: tipography2
		font-size: 40px
		line-height: 48px
		margin 0
	h2
		font-family: tipography2
		margin-top 40px

	p
		font-style normal
		font-weight normal
		font-size 16px
		line-height 24px
		margin 0
	&__description
		display inline-block
		min-height 300px
		width 100%
		background black_color
	&__form
		padding 60px 20px 100px
		display inline-block
		background-color white_color
	.Form
		&__header,
		&__content
			max-width 400px
			display inline-block
		&__content
			margin-top: 60px
				
	input
		width 100%
		line-height 48px
		background light_color
		border solid thin gray_color_1
		text-indent 10px
		letter-spacing -.5px
		outline 0
		transition_all(.3s)
		margin 20px 0 30px
		&:nth-child(2)
			margin-top 0

		&:hover,
		&:focus
			border-color acent_color
			// shadow_custom(acent_color, 0, 3px, 3px, 2px, .11)
	button 
		background-color black_color
		color white_color
		width 100%
		border none 
		outline 0
		line-height 60px
		font-weight 600
		transition_all(.3s)
		&:hover,
		&:focus
			shadow_custom(smoke_color, 0, 0, 0, 6px, .3)

@media only screen and (min-width : 910px)
	.Hero
		display table
		&__description,
		&__form
			display table-cell
			width 50%
			vertical-align middle
			height 100vh
		&__form
			padding 100px
		h1
			font-size 71px
			line-height 91px